{
  "packages": ["packages/*", "packages/sub/*"],
  "version": "0.0.0",
  "npmClient": "yarn",
  "publish": {
    "ignoreChanges": ["ignored-file", "*.md"],
    "message": "chore(release): publish"
  },
  "bootstrap": {
    "npmClientArgs": ["--no-lockfile"]
  },
  "command": {
    "init": {
      "exact": true
    }
  }
}
